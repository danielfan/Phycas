<project name="Phycas Executor" default="dist" basedir="../executor">
    <description>
        simple Phycas Executor build file
    </description>
  <!-- set global properties for this build -->
  <property name="phycasDir" location="phycas"/>
  <property name="guiDir" location="../gui"/>

  <target name="compile"  description="compile the source " >
    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${phycasDir}" destdir="${basedir}" classpath="${guiDir};${guiDir}/swixml.jar;${guiDir}/jdom.jar"/>
  </target>

  <target name="dist" depends="compile"  description="generate the distribution" >
    <!-- Put necessary files in ${basedir} and ${guiDir} into the PhycasExec.jar file -->
    <jar jarfile="PhycasExec.jar" manifest="manifestExec.txt" >
		<fileset dir="${basedir}" includes="**/*.java **/*.class **/*.xml"/>
		<fileset dir="${guiDir}" includes="org/**/*.class"/>
	</jar>
  </target>

</project>

