    <postInstallationActionList>
        <actionGroup>
            <actionList>
                <registrySet>
                    <key>HKEY_CURRENT_USER\Environment</key>
                    <name>FAKEPYTHONPATH</name>
                    <type>REG_SZ</type>
                    <value>${newfakepythonpath}</value>
                </registrySet>
            </actionList>
            <ruleList>
                <compareText>
                    <logic>does_not_contain</logic>
                    <nocase>0</nocase>
                    <text>${fakepythonpath}</text>
                    <value>${installdir}</value>
                </compareText>
            </ruleList>
        </actionGroup>
    </postInstallationActionList>
    <postUninstallationActionList/>
    <preBuildActionList/>
    <preInstallationActionList>
        <setInstallerVariableFromScriptOutput>
            <exec>/usr/bin/which</exec>
            <execArgs>python</execArgs>
            <name>whichpython</name>
        </setInstallerVariableFromScriptOutput>
        <throwError> 
               <text>Python executable not found.</text> 
               <ruleList> 
                 <fileTest> 
                   <path>${whichpython}</path> 
                   <condition>not_executable</condition> 
                 </fileTest> 
               </ruleList> 
            </throwError> 
        <setInstallerVariableFromScriptOutput>
            <exec>${whichpython}</exec>
            <execArgs>-c "import sys,re; print ''.join(re.match(r'(\d+)\.(\d+)', sys.version).groups())"</execArgs>
            <name>pythonversion</name>
        </setInstallerVariableFromScriptOutput>
        <setInstallerVariableFromScriptOutput>
            <exec>python</exec>
            <execArgs>-c "import sys; print sys.version"</execArgs>
            <name>pythonversioninfo</name>
        </setInstallerVariableFromScriptOutput>
        <registryGet>
            <key>HKEY_CURRENT_USER\Environment</key>
            <name>FAKEPYTHONPATH</name>
            <variable>fakepythonpath</variable>
        </registryGet>
        <setInstallerVariable>
            <name>newfakepythonpath</name>
            <value>${fakepythonpath};${installdir}</value>
        </setInstallerVariable>
    </preInstallationActionList>
    <preUninstallationActionList>
        <registryDelete>
            <key>HKEY_CURRENT_USER\Environment</key>
            <name>FAKEPYTHONPATH</name>
        </registryDelete>
    </preUninstallationActionList>
    <slideShowImageList/>
</project>

